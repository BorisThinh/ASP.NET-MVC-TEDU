
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Client/js/controller/cartController.js"></script>
}

<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <td>Mã sản phẩm</td>
                        <td>Tên sản phẩm</td>
                        <td>Ảnh sản phẩm</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity"data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            @*<td>@item.Product.Price VND</td>*@                            
                            <td>@string.Format("{0:#,0}", item.Product.Price)VND</td>                            
                            <td>@string.Format("{0:#,0}", item.Product.Price * item.Quantity) VND</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="btnContinue" class="btn btn-outline-primary">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn btn-outline-primary">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn btn-outline-primary">Xoá giỏ hàng</button>
            <button id="btnPayment" class="btn btn-outline-primary">Thanh toán</button>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm trong giỏ !!!</span>
        }
    </div>
</div>

